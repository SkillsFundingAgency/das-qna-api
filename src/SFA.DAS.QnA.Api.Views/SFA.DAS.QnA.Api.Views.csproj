<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <PackageId>SFA.DAS.QnA.Api.Views</PackageId>
        <Version>0.1.1</Version>
        <Authors>EFSA</Authors>
        <Company>EFSA</Company>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageOutputPath>..\NugetPackages</PackageOutputPath>
        <PackageVersion>0.2.30.0</PackageVersion>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="Views/**/*.*">
            <IncludeInPackage>true</IncludeInPackage>
            <BuildAction>Content</BuildAction>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <None Remove="Views\QuestionPartials\_ComplexCheckboxList.cshtml" />
    </ItemGroup>
    
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
        <PackageReference Include="Microsoft.AspNetCore" Version="2.2.0" />
    </ItemGroup>
    
    <ItemGroup>
      <Reference Include="System.Web">
        <HintPath>System.Web</HintPath>
      </Reference>
    </ItemGroup>
    
</Project>
